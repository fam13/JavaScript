function LongestWord(sentence) {
  
var words = sentence.split(' '); 

//put a space between the quotes(no space = the sentence will be divided into one-one letter, 
//one space means word by word, two space means it will take the whole sentence)

var longest = '';

  for (var i = 0; i < words.length; i++)
  {
    if (words[i].length > longest.length) 
 
 { 
      longest = words[i];
  }
  }
  return longest;
}
console.log(LongestWord("This is Javascript"));

//output: Javascript
